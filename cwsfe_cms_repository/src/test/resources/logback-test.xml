<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="false" scanPeriod="30 seconds" debug="false">

    <jmxConfigurator/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} %method %line - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.hibernate.type.descriptor.sql" level="ALL"/>
    <logger name="org.hibernate.SQL" level="debug"/>

    <logger name="org.hibernate" level="DEBUG"/>
    <logger name="org.hibernate.stat" level="DEBUG"/>

    <logger name="testLogger" level="info">
        <appender-ref ref="STDOUT"/>
    </logger>

</configuration>
